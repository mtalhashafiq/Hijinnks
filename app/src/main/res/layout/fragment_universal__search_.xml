                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:layout_weight="0.9"
                android:background="@drawable/background_border_search_bar"
                android:drawableLeft="@drawable/ic_search_menu_icon"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="Search by name"
                android:paddingLeft="10dp"
                android:textColor="#b2b2b2"
                android:textColorHint="#b2b2b2"
                android:textSize="14sp" />

            <com.example.mtalh.hijinnks.CustomeUI.TextViews.Custome_Textview_Varela_Regular
                android:id="@+id/clear_edittext"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:layout_weight="0.15"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/black" />
